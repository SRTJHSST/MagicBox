{
  "name": "magic-box",
  "homepage": "https://www.katrukhin.com/MagicBox",
  "version": "0.1.6",
  "description": "Organize your workspace, keep files optimized, prepare images for publishing",
  "author": {
    "name": "Alexander Katrukhin",
    "email": "a.katrukhin@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/akatrukhin/MagicBox.git"
  },
  "license": "CC-BY-4.0",
  "keywords": [
    "MagicBox",
    "files optimization",
    "shrink images",
    "sketch app",
    "svg editor"
  ],
  "main": "main.js",
  "scripts": {
    "postinstall": "npm run postinstall:electron && npx electron-builder install-app-deps",
    "postinstall:web": "node postinstall-web",
    "postinstall:electron": "node postinstall",
    "ng": "ng",
    "start": "npm run postinstall:electron && npm-run-all -p ng:serve electron:serve",
    "build": "npm run postinstall:electron && npm run electron:serve-tsc && ng build",
    "build:dev": "npm run build -- -c dev",
    "build:prod": "npm run build -- -c production",
    "ng:serve": "ng serve",
    "ng:serve:web": "npm run postinstall:web && ng serve -o",
    "electron:serve-tsc": "tsc -p tsconfig.serve.json",
    "electron:local": "npm run build:prod && electron .",
    "electron:linux": "npm run build:prod && npx electron-builder build --linux",
    "electron:windows": "npm run build:prod && npx electron-builder build --windows",
    "electron:mac": "npm run build:prod && npx electron-builder build --mac",
    "electron:publish": "npm run build:prod && npx electron-builder build --mac -p always",
    "test": "npm run postinstall:web && ng test",
    "e2e": "npm run postinstall:web && ng e2e"
  },
  "dependencies": {
    "@angular/animations": "^7.2.15",
    "@angular/cdk": "^7.3.7",
    "@angular/material": "^7.3.7",
    "@ctrl/ngx-codemirror": "^1.3.10",
    "angular-file-uploader": "^4.2.1",
    "archiver": "^3.1.1",
    "base64-img": "^1.0.4",
    "buffer": "^5.4.3",
    "child_process": "^1.0.2",
    "codemirror": "^5.52.2",
    "electron-clipboard-watcher": "^1.0.1",
    "electron-is-dev": "^1.1.0",
    "electron-log": "^2.2.17",
    "electron-settings": "^3.2.0",
    "electron-updater": "4.2.0",
    "electron-window-state": "^5.0.3",
    "events": "^3.0.0",
    "fast-xml-parser": "^3.15.1",
    "gifsicle": "^4.0.1",
    "glob": "^7.1.6",
    "jasmine": "^3.5.0",
    "js-base64": "^2.5.1",
    "jszip": "^3.2.2",
    "jszip-utils": "^0.1.0",
    "make-dir": "^1.3.0",
    "moment": "^2.22.2",
    "mozjpeg-js": "^3.3.1",
    "ng-click-outside": "^4.0.0",
    "ngx-file-drop": "^5.0.0",
    "ngx-tabs": "0.0.13",
    "ngx-virtual-scroller": "^1.0.17",
    "ngx-web-worker": "8.0.0",
    "path": "^0.12.7",
    "pngquant-bin": "^5.0.1",
    "rxjs-compat": "^6.5.4",
    "sharp": "0.25.3",
    "shelljs": "^0.8.2",
    "svgo": "^1.3.2",
    "username": "^3.0.0",
    "web-animations-js": "^2.3.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.10.7",
    "@angular/cli": "^7.3.9",
    "@angular/common": "^7.2.15",
    "@angular/compiler": "^7.2.15",
    "@angular/compiler-cli": "^7.2.15",
    "@angular/core": "^7.2.15",
    "@angular/forms": "^7.2.15",
    "@angular/http": "^7.2.15",
    "@angular/language-service": "^7.2.15",
    "@angular/platform-browser": "^7.2.15",
    "@angular/platform-browser-dynamic": "^7.2.15",
    "@angular/router": "^7.2.15",
    "@ngx-translate/core": "^11.0.0",
    "@ngx-translate/http-loader": "^4.0.0",
    "@types/jasmine": "^2.8.9",
    "@types/jasminewd2": "^2.0.8",
    "@types/jszip": "^3.1.6",
    "@types/node": "^10.17.42",
    "codelyzer": "^4.5.0",
    "core-js": "^2.6.11",
    "dotenv": "^8.2.0",
    "electron": "8.5.3",
    "electron-builder": "22.9.1",
    "electron-builder-notarize": "^1.2.0",
    "electron-notarize": "^1.0.0",
    "electron-reload": "^1.5.0",
    "jasmine-core": "^3.5.0",
    "jasmine-spec-reporter": "^4.2.1",
    "karma": "^3.1.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-cli": "^1.0.1",
    "karma-coverage-istanbul-reporter": "^2.1.1",
    "karma-jasmine": "^1.1.2",
    "karma-jasmine-html-reporter": "^1.5.1",
    "node-notifier": "^5.4.3",
    "node-sass": "^4.14.1",
    "prettier": "^1.19.1",
    "protractor": "^5.4.1",
    "rxjs": "^6.5.4",
    "rxjs-tslint": "^0.1.8",
    "ts-node": "^7.0.1",
    "tslint": "^5.20.1",
    "typescript": "3.2.4",
    "wait-on": "^3.3.0",
    "webdriver-manager": "^12.1.7",
    "webpack": "^4.41.5",
    "zone.js": "^0.8.26"
  },
  "build": {
    "productName": "MagicBox",
    "appId": "com.electron.MagicBox",
    "directories": {
      "output": "release/"
    },
    "copyright": "MagicBox is licensed under CC BY-NC 4.0.",
    "files": [
      "**/*",
      "!*.ts",
      "!*.code-workspace",
      "!LICENSE.md",
      "!package.json",
      "!package-lock.json",
      "!src/",
      "!e2e/",
      "!hooks/",
      "!.angular-cli.json",
      "!_config.yml",
      "!karma.conf.js",
      "!tsconfig.json",
      "!tslint.json"
    ],
    "mac": {
      "icon": "./build/app-icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "artifactName": "MagicBox-${version}-${arch}.${ext}",
      "entitlements": "./build/entitlements.mac.plist",
      "entitlementsInherit": "./build/entitlements.mac.inherit.plist",
      "category": "public.app-category.developer-tools",
      "type": "distribution",
      "extendInfo": {
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        }
      },
      "target": [
        "zip"
      ]
    },
    "dmg": {
      "sign": false,
      "background": "./build/app-background-dmg.tiff",
      "contents": [
        {
          "x": 410,
          "y": 190,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 190,
          "type": "file"
        }
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "akatrukhin",
        "repo": "MagicBox"
      }
    ],
    "afterSign": "electron-builder-notarize"
  }
}
