{
  "name": "magic-box",
  "homepage": "https://www.katrukhin.com/MagicBox",
  "version": "0.1.6",
  "description": "Organize your workspace, keep files optimized, prepare images for publishing",
  "author": {
    "name": "Alexander Katrukhin",
    "email": "a.katrukhin@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/akatrukhin/MagicBox.git"
  },
  "license": "CC-BY-4.0",
  "keywords": [
    "MagicBox",
    "files optimization",
    "shrink images",
    "sketch app",
    "svg editor"
  ],
  "main": "main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "ng": "ng",
    "start": "npm-run-all -p electron:serve ng:serve",
    "build": "npm run electron:serve-tsc && ng build --base-href ./",
    "build:dev": "npm run build -- -c dev",
    "build:prod": "npm run build -- -c production",
    "build:env": "npm run electron:serve-tsc && npx electron .",
    "ng:serve": "ng serve -c web -o",
    "electron:serve-tsc": "tsc -p tsconfig.serve.json",
    "electron:serve": "wait-on tcp:4200 && npm run electron:serve-tsc && npx electron . --serve",
    "electron:local": "npm run build:prod && npx electron .",
    "electron:build": "npm run build:prod && electron-builder build",
    "electron:publish": "npm run build:prod && npx electron-builder build --mac -p always",
    "test": "ng test --watch=false",
    "test:watch": "ng test",
    "e2e": "npm run build:prod && cross-env TS_NODE_PROJECT='e2e/tsconfig.e2e.json' mocha --timeout 300000 --require ts-node/register e2e/**/*.e2e.ts",
    "version": "conventional-changelog -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
    "lint": "ng lint"
  },
  "dependencies": {
    "@angular/animations": "^11.0.2",
    "@angular/cdk": "^11.0.0",
    "@angular/material": "^11.0.0",
    "@ctrl/ngx-codemirror": "^4.0.2",
    "archiver": "^5.1.0",
    "base64-img": "^1.0.4",
    "buffer": "^6.0.2",
    "child_process": "^1.0.2",
    "codemirror": "^5.58.3",
    "electron-builder-notarize": "1.2.0",
    "electron-clipboard-watcher": "^1.0.1",
    "electron-is-dev": "^1.1.0",
    "electron-log": "^4.3.0",
    "electron-settings": "^4.0.2",
    "electron-updater": "4.3.5",
    "electron-window-state": "^5.0.3",
    "events": "^3.0.0",
    "fast-xml-parser": "^3.17.4",
    "gifsicle": "^5.1.0",
    "glob": "^7.1.6",
    "jasmine": "^3.5.0",
    "js-base64": "^3.6.0",
    "jszip": "^3.5.0",
    "jszip-utils": "^0.1.0",
    "make-dir": "^1.3.0",
    "moment": "^2.22.2",
    "mozjpeg-js": "^3.3.1",
    "ng-click-outside": "^7.0.1",
    "ngx-file-drop": "^10.1.1",
    "ngx-virtual-scroller": "4.0.3",
    "path": "^0.12.7",
    "pngquant-bin": "^5.0.1",
    "rxjs-compat": "^6.5.4",
    "sharp": "0.25.3",
    "shelljs": "^0.8.2",
    "svgo": "^1.3.2",
    "username": "^3.0.0"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "10.0.1",
    "@angular-devkit/build-angular": "0.1100.1",
    "@angular-eslint/builder": "0.8.0-beta.0",
    "@angular-eslint/eslint-plugin": "0.8.0-beta.0",
    "@angular-eslint/eslint-plugin-template": "0.8.0-beta.0",
    "@angular-eslint/schematics": "0.8.0-beta.0",
    "@angular-eslint/template-parser": "0.8.0-beta.0",
    "@angular/cli": "11.0.1",
    "@angular/common": "11.0.0",
    "@angular/compiler": "11.0.0",
    "@angular/compiler-cli": "11.0.0",
    "@angular/core": "11.0.0",
    "@angular/forms": "11.0.0",
    "@angular/language-service": "11.0.0",
    "@angular/platform-browser": "11.0.0",
    "@angular/platform-browser-dynamic": "11.0.0",
    "@angular/router": "11.0.0",
    "@angular/service-worker": "11.0.0",
    "@ngx-translate/core": "13.0.0",
    "@ngx-translate/http-loader": "6.0.0",
    "@types/jasmine": "3.6.1",
    "@types/jasminewd2": "2.0.8",
    "@types/mocha": "8.0.4",
    "@types/node": "12.12.6",
    "@typescript-eslint/eslint-plugin": "4.7.0",
    "@typescript-eslint/parser": "4.7.0",
    "chai": "4.2.0",
    "conventional-changelog-cli": "2.1.1",
    "core-js": "3.6.5",
    "cross-env": "7.0.2",
    "electron": "^3.1.13",
    "electron-builder": "22.9.1",
    "electron-reload": "1.5.0",
    "jasmine-core": "3.6.0",
    "jasmine-spec-reporter": "6.0.0",
    "karma": "5.2.3",
    "karma-coverage-istanbul-reporter": "3.0.3",
    "karma-electron": "6.3.1",
    "karma-jasmine": "4.0.1",
    "karma-jasmine-html-reporter": "1.5.4",
    "mocha": "8.2.1",
    "npm-run-all": "4.1.5",
    "rxjs": "6.6.3",
    "spectron": "12.0.0",
    "ts-node": "9.0.0",
    "tslib": "2.0.3",
    "typescript": "4.0.5",
    "wait-on": "5.0.1",
    "webdriver-manager": "12.1.7",
    "zone.js": "0.10.3"
  },
  "engines": {
    "node": ">=10.13.0"
  },
  "build": {
    "productName": "MagicBox",
    "appId": "com.electron.MagicBox",
    "directories": {
      "output": "release/"
    },
    "copyright": "MagicBox is licensed under CC BY-NC 4.0.",
    "files": [
      "**/*",
      "!*.ts",
      "!*.code-workspace",
      "!LICENSE.md",
      "!package.json",
      "!package-lock.json",
      "!src/",
      "!e2e/",
      "!hooks/",
      "!.angular-cli.json",
      "!_config.yml",
      "!karma.conf.js",
      "!tsconfig.json",
      "!tslint.json"
    ],
    "mac": {
      "icon": "./build/app-icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "artifactName": "MagicBox-${version}-${arch}.${ext}",
      "entitlements": "./build/entitlements.mac.plist",
      "entitlementsInherit": "./build/entitlements.mac.inherit.plist",
      "category": "public.app-category.developer-tools",
      "type": "distribution",
      "extendInfo": {
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        }
      },
      "target": [
        "zip"
      ]
    },
    "dmg": {
      "sign": false,
      "background": "./build/app-background-dmg.tiff",
      "contents": [
        {
          "x": 410,
          "y": 190,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 190,
          "type": "file"
        }
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "akatrukhin",
        "repo": "MagicBox"
      }
    ],
    "afterSign": "electron-builder-notarize"
  }
}
